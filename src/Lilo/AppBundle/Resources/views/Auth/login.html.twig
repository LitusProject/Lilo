{% extends '@LiloApp/base_minimal.html.twig' %}


{% block content %}
    <form action="{{ path('_auth_check') }}" method="post" class="form-minimal">
        <h2 class="form-minimal-heading">Lilo</h2>

        {% if error is not null %}
            <div class="alert alert-danger">You could not be authenticated.</div>
        {% endif %}

        <input type="text" class="form-control" id="username" name="_username" placeholder="Username" value="{{ lastUsername }}" />
        <input type="password" class="form-control" id="password" name="_password" placeholder="Password" />

        <button class="btn btn-block btn-primary" type="submit">Login</button>
    </form>
{% endblock %}
