{% extends '@LiloApp/base_auth.html.twig' %}


{% block content %}
    <form action="{{ path('_auth_check') }}" method="post" class="form-auth">
        <h2 class="form-auth-heading">Lilo</h2>

        <input type="text" id="username" name="_username" placeholder="Username" value="{{ lastUsername }}" />
        <input type="password" id="password" name="_password" placeholder="Password" />

        <button class="btn btn-large btn-primary" type="submit">Login</button>
    </form>
{% endblock %}
