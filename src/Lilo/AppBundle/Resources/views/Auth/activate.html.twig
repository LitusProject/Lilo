{% extends '@LiloApp/base_auth.html.twig' %}


{% block content %}
    <form action="{{ path('_auth_activate', {'code': user.getCode()}) }}" method="post" class="form-auth">
        <h2 class="form-auth-heading">Lilo</h2>

        {{ form_errors(activateForm) }}
        {{ form_errors(activateForm.password.first) }}

        {{ form_widget(activateForm.password.first) }}
        {{ form_widget(activateForm.password.second) }}

        {{ form_widget(activateForm._token) }}

        <button class="btn btn-large btn-primary" type="submit">Activate</button>
    </form>
{% endblock %}
